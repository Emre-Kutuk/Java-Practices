package creditClick;

public class Path 
{
	public Town town1;
	public Town town2;
	public int distance;
	
	public Path(Town town1, Town town2, int distance)
	{
		this.town1 = town1;
		this.town2 = town2;
		this.distance = distance;
	}
	
	@Override
	public String toString()
	{
		return "A path from " + from.name + " to " + to.name + " and the distance is " + distance + " km.\n" ;
	}	
}
